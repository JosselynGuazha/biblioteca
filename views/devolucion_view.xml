<odoo>
    <record id="devolucion_biblioteca_form_view" model="ir.ui.view">

        <field name="name">Biblioteca ISTLA</field>
        <field name="model">biblioteca.devolucion</field>
        <field name="arch" type="xml">
            <form string="Servicio de Devolucion Bibliotecario">
                <header>

                </header>
                <sheeet>
                    <separator string="Datos del Devolucion Bibliotecario"></separator>
                    <group name="group_top">
                        <field name="fecha_inicio"/>
                        <field name="fecha_fin"/>
                        <field name="estado"/>
                        <field name="multa_ids"/>
                    </group>
                </sheeet>
            </form>
        </field>
    </record>

    <!-- El siguinete bloque de codigo es para colocar una tabla con todos los registroa ingresados-->
    <record id="biblioteca.devolucion_tree_view" model="ir.ui.view">
        <field name="name">biblioteca.devolucion_tree_view</field>
        <field name="model">biblioteca.devolucion</field>
        <field name="arch" type="xml">
            <tree string="Prestamo">
                <field name="fecha_inicio"/>
                <field name="fecha_fin"/>
                <field name="estado"/>
                <field name="multa_ids"/>

            </tree>
        </field>

    </record>
    <record id="action_biblioteca_devolucion" model="ir.actions.act_window">
        <field name="name">Registro de Devolucion</field>
        <field name="res_model">biblioteca.devolucion</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>

    </record>


</odoo>
