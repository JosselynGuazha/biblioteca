<odoo>
    <record id="informacion_biblioteca_form_view" model="ir.ui.view">

        <field name="name">Biblioteca ISTLA</field>
        <field name="model">biblioteca.informacion</field>
        <field name="arch" type="xml">
            <form string="Verificar la Informacion">
                <header>

                </header>
                <sheeet>
                    <separator string="Información de la publicación"></separator>
                    <group name="group_top">
                            <field name="titulo"/>
                            <field name="nro_paginas"/>
                            <field name="fecha_publicacion"/>
                    </group>
                </sheeet>
            </form>
        </field>
    </record>

    <!-- El siguinete bloque de codigo es para colocar una tabla con todos los registroa ingresados-->
    <record id="biblioteca.informacion_tree_view" model="ir.ui.view">
        <field name="name">biblioteca.informacion.tree.view</field>
        <field name="model">biblioteca.informacion</field>
        <field name="arch" type="xml">
            <tree string="Informacion">
              <field name="titulo"/>
              <field name="nro_paginas"/>
              <field name="fecha_publicacion"/>
            </tree>
        </field>

    </record>
    <record id="action_biblioteca_informacion" model="ir.actions.act_window">
        <field name="name">Registro de la Información</field>
        <field name="res_model">biblioteca.informacion</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>

    </record>


</odoo>
