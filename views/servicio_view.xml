<odoo>
    <record id="servicio_biblioteca_form_view" model="ir.ui.view">

        <field name="name">Biblioteca ISTLA</field>
        <field name="model">biblioteca.servicio</field>
        <field name="arch" type="xml">
            <form string="Verificar el Servicio">
                <header>

                </header>
                <sheeet>
                    <separator string="InformaciÃ³n del Servicio"></separator>
                    <group name="group_top">
                        <field name="publicacion_ids"/>
                        <field name="prestamo_ids"/>
                        <field name="devolucion_ids"/>
                        <field name="lector_ids"/>
                    </group>
                </sheeet>
            </form>
        </field>
    </record>

    <!-- El siguinete bloque de codigo es para colocar una tabla con todos los registroa ingresados-->
    <record id="biblioteca.servicio_tree_view" model="ir.ui.view">
        <field name="name">biblioteca.servicio.tree.view</field>
        <field name="model">biblioteca.servicio</field>
        <field name="arch" type="xml">
            <tree string="Servicio">
              <field name="publicacion_ids"/>
              <field name="prestamo_ids"/>
              <field name="devolucion_ids"/>
              <field name="lector_ids"/>
            </tree>
        </field>
    </record>
    <record id="action_biblioteca_servicio" model="ir.actions.act_window">
        <field name="name">Registro del Servicio</field>
        <field name="res_model">biblioteca.servicio</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
    </record>


</odoo>
