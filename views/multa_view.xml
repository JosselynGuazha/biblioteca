<odoo>
    <record id="multa_biblioteca_form_view" model="ir.ui.view">

        <field name="name">Biblioteca ISTLA</field>
        <field name="model">biblioteca.multa</field>
        <field name="arch" type="xml">
            <form string="Multa por el Servicio Bibliotecario">
                <header>

                </header>
                <sheeet>
                    <separator string="Datos de la Mula"></separator>
                    <group name="group_top">
                        <field name="total_dias"/>
                        <field name="valor"/>

                    </group>
                </sheeet>
            </form>
        </field>
    </record>

    <!-- El siguinete bloque de codigo es para colocar una tabla con todos los registroa ingresados-->
    <record id="biblioteca.multa_tree_view" model="ir.ui.view">
        <field name="name">biblioteca.multa_tree_view</field>
        <field name="model">biblioteca.multa</field>
        <field name="arch" type="xml">
            <tree string="Multa">
              <field name="total_dias"/>
              <field name="valor"/>

            </tree>
        </field>

    </record>
    <record id="action_biblioteca_multa" model="ir.actions.act_window">
        <field name="name">Registro de la Multa</field>
        <field name="res_model">biblioteca.multa</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>

    </record>


</odoo>
